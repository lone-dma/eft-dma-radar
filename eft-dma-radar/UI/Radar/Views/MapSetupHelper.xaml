<UserControl x:Class="eft_dma_radar.UI.Radar.Views.MapSetupHelper"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:eft_dma_radar.UI.Radar.ViewModels"
             mc:Ignorable="d"
             Background="#FF1E1E1E"
             Width="400"
             Height="250"
             HorizontalAlignment="Left"
             VerticalAlignment="Top"
             d:DesignHeight="200"
             d:DesignWidth="300"
             Visibility="{Binding IsVisible, Converter={StaticResource BoolToVis}}">
    <!-- design‑time VM -->
    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:MapSetupHelperViewModel}"
                          IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>
    <Grid>
        <GroupBox Header="Map Setup"
                  Foreground="White"
                  BorderBrush="#FF3C3C3C"
                  Background="#FF2D2D30"
                  Padding="8">
            <StackPanel>
                <TextBlock Text="{Binding Coords}"
                           Foreground="#FFAAAAAA"
                           Margin="0,0,0,8" />
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,6"
                            VerticalAlignment="Center">
                    <TextBlock Text="X,Y"
                               Foreground="White"
                               VerticalAlignment="Center" />
                    <TextBox Width="60"
                             Margin="8,0"
                             Text="{Binding X, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <TextBox Width="60"
                             Text="{Binding Y, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,12"
                            VerticalAlignment="Center">
                    <TextBlock Text="Scale"
                               Foreground="White"
                               VerticalAlignment="Center" />
                    <TextBox Width="60"
                             Margin="8,0"
                             Text="{Binding Scale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <Button Content="Apply"
                        Width="80"
                        HorizontalAlignment="Right"
                        Command="{Binding ApplyCommand}" />
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
