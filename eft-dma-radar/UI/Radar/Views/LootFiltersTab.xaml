<UserControl x:Class="eft_dma_radar.UI.Radar.Views.LootFiltersTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:eft_dma_radar.UI.Radar.Views"
             xmlns:vm="clr-namespace:eft_dma_radar.UI.Radar.ViewModels"
             xmlns:misc="clr-namespace:eft_dma_radar.UI.Misc"
             xmlns:loot="clr-namespace:eft_dma_radar.UI.Loot"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <!-- design‐time DataContext -->
    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:LootFiltersViewModel}"
                          IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>

    <!-- converters for hex‐string ↔ Brush/Color -->
    <UserControl.Resources>
        <misc:StringToBrushConverter x:Key="StringToBrushConverter" />
        <misc:StringToColorConverter x:Key="StringToColorConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- filter selector -->
            <RowDefinition Height="Auto" />
            <!-- add‐entry row -->
            <RowDefinition Height="*" />
            <!-- main grid -->
        </Grid.RowDefinitions>

        <!-- Row 0: Filter selector -->
        <StackPanel Orientation="Horizontal"
                    Margin="5"
                    Grid.Row="0">
            <CheckBox Content="Enabled"
                      IsChecked="{Binding CurrentFilterEnabled, Mode=TwoWay}"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0" />
            <ComboBox ItemsSource="{Binding FilterNames}"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      SelectedItem="{Binding SelectedFilterName, Mode=TwoWay}"
                      Width="150"
                      Margin="0,0,10,0" />
            <Button Content="Add"
                    Command="{Binding AddFilterCommand}"
                    Margin="0,0,5,0" />
            <Button Content="Rename"
                    Command="{Binding RenameFilterCommand}"
                    Margin="0,0,5,0" />
            <Button Content="Delete"
                    Command="{Binding DeleteFilterCommand}" />
        </StackPanel>

        <!-- Row 1: Add new entry -->
        <StackPanel Orientation="Horizontal"
                    Margin="5"
                    Grid.Row="1">
            <ComboBox x:Name="ItemSelector"
                      ItemsSource="{Binding FilteredItems, Mode=OneWay}"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      SelectedItem="{Binding SelectedItemToAdd, Mode=TwoWay}"
                      DisplayMemberPath="Name"
                      Width="400"
                      Margin="0,0,10,0">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>
            <TextBox Text="{Binding ItemSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                     Width="200"
                     Margin="0,0,10,0"
                     VerticalAlignment="Center" />
            <Button Content="Add"
                    Command="{Binding AddEntryCommand}"
                    VerticalAlignment="Center" />
        </StackPanel>

        <!-- Row 2: Entries grid with inline color‐picker -->
        <DataGrid ItemsSource="{Binding Entries}"
                  AutoGenerateColumns="False"
                  Grid.Row="2"
                  Margin="5"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  ScrollViewer.CanContentScroll="True"
                  VirtualizingStackPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling">

            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Enabled"
                                        Binding="{Binding Enabled, Mode=TwoWay}" />

                <DataGridTextColumn Header="Item ID"
                                    Binding="{Binding ItemID, Mode=TwoWay}" />

                <DataGridTextColumn Header="Item Name"
                                    Binding="{Binding Name}"
                                    IsReadOnly="True" />

                <DataGridTemplateColumn Header="Type"
                                        Width="150">
                    <!-- display current enum name -->
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Type}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                    <!-- put a real ComboBox in the editing template -->
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.FilterEntryTypes,
                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      SelectedItem="{Binding Type, Mode=TwoWay}"
                                      Width="140" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Comment"
                                    Binding="{Binding Comment, Mode=TwoWay}" />

                <!-- Color column: swatch and in‑cell Xceed ColorPicker -->
                <DataGridTemplateColumn Header="Color">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Width="16"
                                    Height="16"
                                    Background="{Binding Color, Converter={StaticResource StringToBrushConverter}}"
                                    BorderBrush="Black"
                                    BorderThickness="1" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <xctk:ColorPicker SelectedColor="{Binding Color, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              DisplayColorAndName="True"
                                              Width="150" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
