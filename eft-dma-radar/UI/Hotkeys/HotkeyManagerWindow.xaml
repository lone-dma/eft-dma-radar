<Window x:Class="eft_dma_radar.UI.Hotkeys.HotkeyManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:eft_dma_radar.UI.Hotkeys"
        xmlns:vm="clr-namespace:eft_dma_radar.UI.Hotkeys"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Hotkey Manager"
        Width="800" Height="450"
        MinWidth="600" MinHeight="300">
    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:HotkeyManagerViewModel}"
                      IsDesignTimeCreatable="False"/>
    </d:UserControl.DataContext>
    <Grid Margin="10">
        <GroupBox Header="Set Hotkeys In‑Game" FontWeight="Bold">
            <DockPanel LastChildFill="True" Margin="8">

                <!-- Top row: Action + Key pickers and Add/Remove -->
                <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,0,0,12">

                    <!-- Action -->
                    <StackPanel Width="200">
                        <TextBlock Text="Action" Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding Controllers}" ScrollViewer.VerticalScrollBarVisibility="Auto"
                      SelectedItem="{Binding SelectedAction}"
                      HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Hotkey -->
                    <StackPanel Width="200" Margin="16,0,0,0">
                        <TextBlock Text="Hotkey" Margin="0,0,0,4"/>
                        <ComboBox ItemsSource="{Binding AvailableKeys}" ScrollViewer.VerticalScrollBarVisibility="Auto"
                      SelectedItem="{Binding SelectedKey}"
                      HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <!-- Add / Remove -->
                    <StackPanel Margin="16,0,0,0" VerticalAlignment="Bottom">
                        <Button Content="Add"
                    Command="{Binding AddCommand}"
                    MinWidth="75"
                    Margin="0,0,0,6"/>
                        <Button Content="Remove"
                    Command="{Binding RemoveCommand}"
                    MinWidth="75"/>
                    </StackPanel>
                </StackPanel>

                <!-- Bottom: Close button -->
                <DockPanel DockPanel.Dock="Bottom" Margin="0,12,0,0">
                    <Button Content="Close"
                  Command="{Binding CloseCommand}"
                  Width="80"
                  HorizontalAlignment="Center"/>
                </DockPanel>

                <!-- Center: Hotkey list -->
                <ListBox ItemsSource="{Binding HotkeyEntries}" SelectedItem="{Binding SelectedEntry}"
                 DisplayMemberPath="."
                 BorderThickness="1"
                 BorderBrush="Gray"
                 Padding="4"/>
            </DockPanel>
        </GroupBox>
    </Grid>
</Window>
